      <label>Description</label>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="input-group">
      <div class="input-group-addon">RON</div>
      <%=
        f.number_field :price, value: f.object.price, class: 'form-control'
      %>
      <div class="input-group-addon">.00</div>
    </div>

    <div class="form-group">
      <label>Image url</label>
      <%= f.text_field :image_url, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label>Affiliate code</label>
      <%= f.text_field :affiliate_code, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label>Campaign Name</label>
      <%= f.text_field :campaign_name, class: 'form-control' %>
    </div>

  <div class="actions" style="float: left">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
