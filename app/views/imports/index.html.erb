<h1>Listing imports</h1>
<div class="row">
  <div class="container-fluid">
    <table class="table table-hover">
      <% @imports.each do |import| %>
        <tr>
          <td>
            <%= import.id %>
          </td>
          <td>
            <%= import.title %>
          </td>
          <td>
            <%= import.state %>
          </td>
          <td>
            <%=
              link_to 'Destroy',
              import_path(import),
              :method => :delete,
              class: 'btn btn-danger btn-sm'
            %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @imports.each do |import| %>
      <tr>
        <td><%= link_to 'Show', import %></td>
        <td><%= link_to 'Edit', edit_import_path(import) %></td>
        <td><%= link_to 'Destroy', import, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Import', new_import_path,class: 'btn btn-default' %>
<%= link_to 'Back', root_path,class: 'btn btn-default' %>
