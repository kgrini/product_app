<h1>Listing imports</h1>
<div class="row">
  <div class="container-fluid">
    <table class="table table-hover">
      <tr>
        <th>
          #
        </th>
        <th>
          Title
        </th>
        <th>
          Added at
        </th>
        <th>
          Imported at
        </th>
        <th>
          State
        </th>
        <th>

        </th>
      </tr>
      <% @imports.each do |import| %>
        <tr>
          <td>
            <%= import.id %>
          </td>
          <td>
            <%= import.title %>
          </td>
          <td>
            <%= import.created_at %>
          </td>
          <td>
            <%= import.imported_at %>
          </td>
          <td>
            <%= import.state %>
          </td>
          <td>
            <% if import.imported_at.blank? %>
              <%=
                link_to 'Start',
                start_import_path(import),
                class: 'btn btn-primary btn-sm'
              %>
            <% end %>
            <%=
              link_to 'Destroy',
              import_path(import),
              :method => :delete,
              class: 'btn btn-danger btn-sm'
            %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Import', new_import_path,class: 'btn btn-default' %>
